<h1>
  All movies
</h1>

<a href="/movies/new">
  Add a new movie
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Title
    </th>

    <th>
      Description
    </th>

    <th>
      Favorite
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @movies.each do |movie| %>
  <tr>
    <td>
      <%= movie.id %>
    </td>

    <td>
      <%= movie.title %>
    </td>

    <td>
      <%= movie.description %>
    </td>

    <td>
      <%= movie.favorite %>
    </td>

    <td>
      <%= time_ago_in_words(movie.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(movie.updated_at) %> ago
    </td>

    <td>
      <a href="/movies/<%= movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
