<div class="row">
  <div class="offset-md-2 col-md-8">
    <div class="card mb-3">
      <h2 class="card-header h4">
        Sign Up
      </h2>

      <div class="card-block">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mb-3" }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-group">
          <%= f.label :first_name, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :first_name, :class => "form-control", :placeholder => "Enter first name" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :last_name, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :last_name, :class => "form-control", :placeholder => "Enter last name" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :bio, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_area :bio, :class => "form-control", :placeholder => "Enter bio" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :admin, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.check_box :admin, class: "col-sm-2 control-label" %>
          </div>
        </div>

        <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>

        <%= render "drivers/shared/links" %>
      </div>
    </div>
  </div>
</div>
